{
  "site": "example",
  "start_urls": {"collection": "https://www.example.com/collections/all"},
  "traversal": {
    "collection": [
      {
        "extractors": [
          {
            "class": "link_extractor",
            "params": {"restrict_css": ["a.pagination__item--prev"]}
          }
        ],
        "callbacks": ["collection"]
      },
      {
        "extractors": [
          {
            "class": "link_extractor",
            "params": {"allow": ["/products/[\\w\\-]+$"]}
          }
        ],
        "callbacks": ["product"]
      }
    ],
    "product": [
      {
        "extractors": [
          {
            "class": "css_getall",
            "params": {"selectors": ["div.product__media img"], "attrs": ["src"]}
          }
        ],
        "callbacks": ["image"]
      }
    ],
    "image": []
  },
  "processors": {
    "product": [
      {
        "class": "save"
      }
    ],
    "image": [
      {
        "class": "save",
        "method": "group_by_parent"
      }
    ]
  }
}